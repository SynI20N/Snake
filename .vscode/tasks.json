{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "linuxbuild",
            "command": "/usr/bin/g++",
            "args": [
                "-D linux",
                "-g",
                "/home/leonid/Projects/Snake/src/*.cpp",
                "/home/leonid/Projects/Snake/src/openGL/*.cpp",
                "/home/leonid/Projects/Snake/src/gameObjects/*.cpp",
                "-o",
                "/home/leonid/Projects/Snake/bin/linux/Main.out",
                "-lglfw",
                "-lGLEW",
                "-lGL"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Задача создана отладчиком."
        },
        {
            "type": "cppbuild",
            "label": "win64build",
            "command": "/usr/bin/x86_64-w64-mingw32-g++",
            "args": [
                "-D win64",
                "-L/usr/lib/gcc/x86_64-w64-mingw32/10-win32/GL/",
                "-I/usr/lib/gcc/x86_64-w64-mingw32/10-win32/include/c++/",
                "-std=c++11",
                "-g",
                "/home/leonid/Projects/Snake/src/*.cpp",
                "/home/leonid/Projects/Snake/src/openGL/*.cpp",
                "/home/leonid/Projects/Snake/src/gameObjects/*.cpp",
                "-o",
                "/home/leonid/Projects/Snake/bin/windows/Snake.exe",
                "-lglfw3",
                "-lglew32",
                "-lopengl32"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Задача создана отладчиком."
        },
        {
            "label" : "build",
            "dependsOrder": "sequence",
            "dependsOn" : [
                "win64build",
                "linuxbuild"
            ]
        }
    ],
    "version": "2.0.0"
}